<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        style="@style/TitleBar"
        android:id="@+id/linearLayout1"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/img_voltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv1"
            android:text="@string/lista_rotas"
            android:textColor="@android:color/white"
            android:layout_toRightOf="@+id/img_voltar"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <EditText
        android:theme="@style/Base.V12.Widget.AppCompat.EditText"
        android:textStyle="italic"
        android:id="@+id/campo_busca"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Busca pela origem..."
        android:textColor="@color/background_floating_material_light"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@android:id/list" />

</LinearLayout>